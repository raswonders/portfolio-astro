---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a
  role="button"
  tabindex="0"
  href={href}
  class=`w-fit transition-all hover:-translate-y-1 hover:scale-105 hover:shadow-lg duration-200 px-6 py-4 rounded-lg text-lg font-bold bg-gray-700 text-white outline-offset-4 outline-gray-500`
  ><slot /></a
>
