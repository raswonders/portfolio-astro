---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a
  role="button"
  tabindex="0"
  href={href}
  class=`w-fit transition-all hover:scale-105 hover:shadow-lg px-6 py-4 rounded-lg text-lg font-bold bg-neutral-700 text-white outline-offset-4 outline-neutral-500`
  ><slot /></a
>
