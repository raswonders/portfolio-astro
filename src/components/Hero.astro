---
import { Image } from "astro:assets";
import profile from "../assets/profile.webp";
import Heading from "./Heading.astro";
import CTAButton from "./CTAButton.astro";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<section class={`grid gap-8 items-center sm:grid-cols-2 ${className || ""}`}>
  <div class="flex flex-col items-start gap-8">
    <Heading>
      <span>Hey, Welcome!</span>
      <span>
        I'm Rastislav, <span class="text-slate-500">Web Developer</span> from Brno
      </span>
    </Heading>
    <CTAButton href="/#contact" variant="dark">Let's talk</CTAButton>
  </div>
  <Image src={profile} alt="Rastislav's profile picture" />
</section>
