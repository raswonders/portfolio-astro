---
import { Image } from "astro:assets";
import HtmlIcon from "../assets/HtmlIcon.svg";
import CssIcon from "../assets/CssIcon.svg";
import JsIcon from "../assets/JsIcon.svg";
import TsIcon from "../assets/TsIcon.svg";
import ReactIcon from "../assets/ReactIcon.svg";
import TwIcon from "../assets/TwIcon.svg";
import ViteIcon from "../assets/ViteIcon.svg";
import AstroIcon from "../assets/AstroIcon.svg";

const skills = [
  { title: "Html5", icon: HtmlIcon, alt: "" },
  { title: "Css3", icon: CssIcon, alt: "" },
  { title: "Javascript", icon: JsIcon, alt: "" },
  { title: "Typescript", icon: TsIcon, alt: "" },
  { title: "React", icon: ReactIcon, alt: "" },
  { title: "Tailwindcss", icon: TwIcon, alt: "" },
  { title: "Astro", icon: AstroIcon, alt: "" },
  { title: "Vite", icon: ViteIcon, alt: "" },
];
---

<section class="flex flex-col items-center space-y-16">
  <h2 class="text-6xl"> Tech Stack</h2>
  <div class="flex gap-4 flex-wrap justify-center content-center">
    {
      skills.map((item) => (
        <div class="p-4 flex justify-center items-center gap-2 rounded-lg border grayscale hover:grayscale-0">
          <Image src={item.icon} alt="" />
          <div>{item.title}</div>
        </div>
      ))
    }
  </div>
</section>
