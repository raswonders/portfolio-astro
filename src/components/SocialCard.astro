---
import Github from "./icons/Github.astro";
import LinkedIn from "./icons/LinkedIn.astro";

const variants = [
  {
    id: "github",
    title: "Github",
    href: "https://github.com/raswonders",
    icon: Github,
  },
  {
    id: "linkedin",
    title: "LinkedIn",
    href: "https://www.linkedin.com/in/rastislavhepner/",
    icon: LinkedIn,
  },
];

const { id } = Astro.props;
const variant = variants.filter((item) => item.id === id)[0];
const Icon = variant?.icon;
---

<a
  id={variant.id}
  class="w-20 h-20 rounded-xl p-2 text-xs flex flex-col justify-between bg-neutral-700 transition-all hover:-translate-y-1 hover:scale-105 hover:shadow-lg duration-200 outline-neutral-500 outline-offset-4"
  target="_blank"
  href={variant.href}
>
  <span>{variant.title}</span>
  <Icon />
</a>
