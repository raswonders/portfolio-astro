---
import ContactForm from "./ContactForm.astro";
import Heading from "./Heading.astro";
import Github from "./icons/Github.astro";
import LinkedIn from "./icons/LinkedIn.astro";
import Twitter from "./icons/Twitter.astro";

interface Field {
  value: string;
  error: string;
}
interface Props {
  fields: {
    name: Field;
    email: Field;
    message: Field;
  };
}

const { fields } = Astro.props;
---

<section id="contact" class="grid md:grid-cols-2 gap-16 bg-black px-4 py-32">
  <Heading>
    <span class="text-white"
      >Let's build something <span class="text-slate-500">together</span></span
    >
  </Heading>
  <ContactForm fields={fields} />
  <div
    class="flex gap-4 justify-between items-center md:flex-col md:items-stretch md:justify-normal"
  >
    <div class="flex flex-col">
      <span class="text-xl text-white font-black">Rastislav Hepner.</span>
      <span class="text-lg text-slate-500 font-normal">Brno, CZ</span>
    </div>

    <div class="flex text-white gap-2 justify-center md:justify-normal">
      <a target="_blank" href="https://github.com/raswonders">
        <Github />
      </a>
      <a target="_blank" href="https://www.linkedin.com/in/rastislavhepner/">
        <LinkedIn />
      </a>
      <a target="_blank" href="https://x.com/raswonders">
        <Twitter />
      </a>
    </div>
  </div>
</section>
