---
import type { CollectionEntry } from "astro:content";

interface Props {
  projects: CollectionEntry<"projects">[];
}

const { projects } = Astro.props;
---

<section id="projects" class="flex flex-col items-center space-y-16">
  <h2 class="text-2xl font-extrabold">Projects</h2>
  <div class="w-full flex flex-col gap-y-16 items-center tracking-wide leading-normal">
    {
      projects.map((project) => {
        const { title, description, cover, coverAlt } = project.data;
        return (
          <a
            target="_blank"
            href={`/projects/${project.id}`}
            class="w-full h-[640px] p-4 md:p-8 flex flex-col gap-y-4 bg-neutral-200 rounded-xl max-w-7xl"
          >
            <h3 class="text-2xl md:text-4xl text-neutral-500 font-black">{title}</h3>
            <div class="flex flex-col gap-y-3 max-w-prose">
              <p class="text-neutral-600">{description}</p>
              <ul class="flex flex-wrap gap-x-2 text-neutral-500 text-sm">
                {project.data.stack.map((name: string) => {
                  let nameJoined = name.replaceAll(" ", "");
                  return <li>{nameJoined}</li>;
                })}
              </ul>
            </div>
            {/* <Image alt={coverAlt} src={cover} class="rounded-2xl" /> */}
          </a>
        );
      })
    }
  </div>
</section>
